<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appback"
    tools:context="com.example.shubham.pingar.final_set_pickup">

    <Button
        android:id="@+id/setButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Set Pickup Location "
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/server_ip"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/donorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:background="@drawable/rounded_rect"
        android:drawableLeft="@drawable/per"
        android:ems="10"
        android:hint="Donor's Name"
        android:inputType="textPersonName"
        android:padding="2dp"
        android:paddingLeft="0dp"
        android:textColor="@android:color/holo_red_light"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default" />

    <EditText
        android:id="@+id/contactno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/donorName"
        android:layout_alignStart="@+id/donorName"
        android:layout_below="@+id/donorName"
        android:layout_marginTop="13dp"
        android:autofillHints="Contact No."
        android:background="@drawable/rounded_rect"
        android:drawableLeft="@drawable/phoneno"
        android:ems="10"
        android:hint="Contact No."
        android:inputType="textPersonName"
        android:padding="2dp"
        android:paddingLeft="0dp"
        android:textColor="@android:color/holo_red_light"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default" />

    <EditText
        android:id="@+id/server_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contactno"
        android:layout_alignStart="@+id/contactno"
        android:layout_below="@+id/contactno"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_rect"
        android:ems="10"
        android:hint="Server Link.."
        android:inputType="textPersonName"
        android:padding="2dp"
        android:paddingLeft="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/alertmessage"
        android:textColor="?attr/editTextColor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp" />

</RelativeLayout>
